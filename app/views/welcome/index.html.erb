<p id="notice"><%= notice %></p>

<h1>Portal de Noticias</h1>
<p> Bienvenido al Portal de Noticias T1 </p>

<%= link_to 'Sitio Administrador', :admins %> 

 <table>
  <thead>
    <tr>
      <th>Titular</th>
      <th>Bajada</th>
      <th>Cuerpo</th>
      <th>Hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.titular %></td>
        <td><%= admin.bajada %></td>
        <td><%= admin.cuerpo.truncate(1000, separator: ' ')%></td>
        <td><%= admin.created_at%></td>
        <td><%= link_to 'Expandir Noticia', admin %></td>
      </tr>
    <% end %>
  </tbody>
</table>